{
  "app_name": "CodeAlpha Language Translation Tool",
  "version": "1.0",
  "default_language": "Spanish",
  "languages": {
    "Spanish": "es",
    "French": "fr",
    "German": "de",
    "Japanese": "ja",
    "Chinese": "zh-CN",
    "Portuguese": "pt",
    "Russian": "ru",
    "Italian": "it"
  },
  "ui": {
    "window_width": 700,
    "window_height": 600,
    "theme": "dark",
    "colors": {
      "bg_color": "#1a1a2e",
      "fg_color": "#eaeaea",
      "accent_color": "#16c784",
      "button_color": "#0f3460",
      "button_hover": "#533483",
      "header_color": "#0f3460"
    }
  },
  "font": {
    "default_font": "Helvetica",
    "title_size": 18,
    "text_size": 11,
    "small_size": 10
  },
  "api": {
    "timeout": 10,
    "max_retries": 3,
    "retry_delay": 2
  }
}
